<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/herbcafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/herbcafe" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/herbcafe"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Herb Cafe"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="25dp"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/map"
        android:text="пр. Манаса 47"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_below="@+id/adress"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/call" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adress"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/call"
        android:text="0500 335 544"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/instagram"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/call"
        android:src="@drawable/instagram"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/link"
        android:layout_marginTop="15dp"
        android:layout_below="@id/number"
        android:layout_toRightOf="@id/instagram"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="https://www.instagram.com/herbcafe.kg/"
/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instagram"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:text="О нас"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:text="Herb Cafe - элитная кофейня, нового формата, c красивым интерьером, дружелюбным обслуживающим персоналом."/>




</RelativeLayout>